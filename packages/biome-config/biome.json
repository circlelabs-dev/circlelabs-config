{
    "root": false,
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80,
        "formatWithErrors": true
    },
    "assist": {
        "actions": { "source": { "organizeImports": "on" } }
    },
    "linter": {
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "always"
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        },
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
